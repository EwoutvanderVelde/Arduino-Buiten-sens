// lcd
// include the library code:
#include <LiquidCrystal.h>
// initialize the library with the numbers of the interface pins
LiquidCrystal lcd(10, 9, 5, 4, 3, 2);
#include <SoftwareSerial.h>

// gasses
const int gasPin = A0; //GAS sensor output pin to Arduino analog A0 pin
const int gasPin2 = A0; //GAS sensor output pin to Arduino analog A0 pin

// temp and hum
#include <dht.h>
dht DHT;
#define DHT11_PIN 44

// time
#include <DS3231.h>
// Init the DS3231 using the hardware interface
DS3231  rtc(SDA, SCL);

// sd
#include <SPI.h>
#include <SD.h>
File myFile;

void setup(){
  Serial.begin(9600); //Initialize serial port - 9600 bps
  
  // set up the LCDâ€™s number of columns and rows:
  lcd.begin(16, 2);
  // Print a message to the LCD.
  lcd.print("hello, world!");
  
  // Initialize the rtc object
  rtc.begin();

  delay(2000); // time to read hello world for debugging perpuse
  if (!SD.begin(2)) {
    lcd.print("sd failed!");
    return;
  } else {
    lcd.print("sd succes!");
  }
  myFile = SD.open("test.txt", FILE_WRITE);
  delay(2000);
  lcd.clear();

  myFile.println("# Date");
  myFile.println("\t");
  myFile.println("Time");
  myFile.println("\t");
  myFile.println("Temp");
  myFile.println("\t");
  myFile.println("Humid");
  myFile.println("\t");
  myFile.println("Gas1");
  myFile.println("\t");
  myFile.println("Gas2");
  myFile.println("\n");
}

void loop(){
  
  // Gas Sensors 1 and 2
  
  //Serial.println(analogRead(gasPin)); // For debugging perpuses
  //.println(analogRead(gasPin2)); // For debugging perpuses
  // set the cursor to column 0, line 1
  // (note: line 1 is the second row, since counting begins with 0)
  lcd.setCursor(11, 0); 
  lcd.print("1:"); // to know what sensor you're reading since both gas sensors give simulair outputs
  lcd.print(analogRead(gasPin));
  lcd.setCursor(11,1);
  lcd.print("2:");
  lcd.print(analogRead(gasPin2));
  //lcd.setCursor(13, 0);
  //lcd.setCursor(13,1);
  
   

  // Temperature and moisture sensor
  int chk = DHT.read11(DHT11_PIN);
  //Serial.print("Temperature = ");
  //Serial.println(DHT.temperature);
  //Serial.print("Humidity = ");
  //Serial.println(DHT.humidity);
  lcd.setCursor(0, 0);
  lcd.print(DHT.temperature);
  lcd.setCursor(6,0);
  lcd.print(DHT.humidity);
  
  
  // Time module
  lcd.setCursor(0, 1);
  lcd.print(rtc.getTimeStr());
  //Serial.println(rtc.getTimeStr()); //debugging

  // Write to SD 

  myFile.println(rtc.getDateStr());
  myFile.println("\t");
  myFile.println(rtc.getTimeStr());
  myFile.println("\t");
  myFile.println(DHT.temperature);
  myFile.println("\t");
  myFile.println(DHT.humidity);
  myFile.println("\t");
  myFile.println(analogRead(gasPin));
  myFile.println("\t");
  myFile.println("Gas2");
  myFile.println(analogRead(gasPin2));
  
  // Sample rate
  delay(2000);

  
}
